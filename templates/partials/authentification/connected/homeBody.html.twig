<section>
    <div class="row first_section" style="padding-top:4%;">
        <div class="col-lg-9 col-sm-12 bloc_accueil">
            <div class="bloc_sombre_accueil"></div>
            <video id="video" autoplay="" loop="" muted="">
                    <source class="video_accueil" src="https://cdn.surfair.com/wp-content/uploads/2018/04/04184631/Homepage-Video-Cuts_v4_Compressed.webmhd.webm" type="video/webm">
                    <source class="video_accueil" src="https://cdn.surfair.com/wp-content/uploads/2018/04/04184643/Homepage-Video-Cuts_v4_1.mp4" type="video/mp4">
            </video>  
            <div class="titre_accueil_video">
                <h2 class="subtitle desktop">WELCOME TO MODERN AIR</h2>
                <h1 class="title desktop">Change the way you fly</h1>
            </div>
            <div class="home-buttons">
                <a href="/tarifs" class="button_home">View Memberships</a>
                <a href="/schedule" class="button_home">See Flight Schedule</a>
                <a href="/experience" class="button_home">How It Works</a>
                <a href="/destination" class="button_home">Destinations</a>
            </div> 
        </div>
        <div class="col-lg-3 col-sm-12 form_coord" style="padding:0px!important;color:#0a253e;background:#efefef;">
            <div class="row marg" style="margin-top:20%;">
                <div class="col-12">
                    <div class="row marg">
                        <div id="mc_embed_signup" class="offset-md-3 offset-lg-1 col-12 col-md-6 col-lg-10">
                            <form action="{{ path('home') }}" method="post">                      
                                <fieldset id="mc_embed_signup_scroll" style="text-align:center;">
                                     <legend class="placeholder" style="color:#0a253e;text-align:center;">Rechercher des vols</legend>
                                     {% if not_found is defined %}
                                     <p style="color:firebrick;">{{ not_found }}</p>
                                     {% endif %}
                                    <div class="mc-field-group">
                                        <select class="select" id="Departure" name="Departure">
                                            <option class="placeholder" hidden>De :</option>
                                            {% for city in cities %}
                                            <option class="placeholder">{{ city.nameCity }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="mc-field-group">
                                       <select class="select" id="Arrival" name="Arrival">
                                            <option class="placeholder" hidden>À :</option>
                                            {% for city in cities %}
                                            <option class="placeholder">{{ city.nameCity }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="mc-field-group">
                                        <input type="text" name="dateDeparture" class="form-control" id="booking_startDate" placeholder="Date de départ">
                                    </div>
                                    <div class="clear">
                                        <input type="submit" name="search_flights" class="offset-2 offset-sm-4 offset-lg-2 btn btn-primary btn-md" id="mc-embedded-subscribe" value="RECHERCHER">
                                    </div>                                    
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>     
        </div>
    </div>
</section>

