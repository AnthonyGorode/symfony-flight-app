{% extends 'base.html.twig' %}

{% block title %}liste des vols{% endblock %}

{% block stylesheets %}
<style type="text/css">
.image_fond_index{position: fixed; right: 0; bottom: 0;min-width: 100%; min-height: 100%;width: auto; height: auto; z-index: -100;background: url(https://ailesx.com/wp-content/uploads/2018/10/Analysis2.jpg) no-repeat;background-size: cover;background-position: top;}
</style>
{% endblock %}

{% block body %}
<div class="image_fond_index"></div>
    <div class="container">
        <div class="row mb-5" style="background:rgba(247, 247, 247, 0.9);">
            {% for flight in flights %}
            <div class="col-12" style="border:1px outset #001944;">
                <div class="row">
                    <div class="col-sm-5 mt-5 mb-5 text-center">
                        <span>De :</span>
                        <h3>{{ flight.airportDeparture.nameAirport }}</h3>
                        <p>{{ flight.airportDeparture.city.nameCity }}</p>
                        <div>Depart : {{ flight.hourDeparture | date('d/m/y') }} à {{ flight.hourDeparture | date('H:i') }}</div>
                    </div>
                    <div class="col-sm-5 mt-5 mb-5 text-center">
                        <span>à :</span>
                        <h3>{{ flight.airportArrival.nameAirport }}</h3>
                        <p>{{ flight.airportArrival.city.nameCity }}</p>
                        <div>Arrivé : {{ flight.hourArrival | date('d/m/y') }} à {{ flight.hourArrival | date('H:i') }}</div>
                    </div>
                    <div class="col-sm-2">
                        <a href="{{ path('flight_booking',{'id' : flight.id}) }}" class="btn btn-primary" style="margin-top:60%;">Réserver</a>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
